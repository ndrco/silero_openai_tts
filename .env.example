HOST=0.0.0.0
PORT=8000

# Русская модель Silero
SILERO_LANGUAGE=ru
SILERO_MODEL_ID=v5_1_ru
SILERO_SAMPLE_RATE=48000
SILERO_DEVICE=auto
SILERO_NUM_THREADS=4
SILERO_MAX_CHARS_PER_CHUNK=500
SILERO_PAUSE_BETWEEN_FRAGMENTS_SEC=0.3
SILERO_DEFAULT_SPEAKER=kseniya
# Постоянный каталог для моделей/кэша torch.hub
SILERO_MODELS_DIR=models

# Авторизация
REQUIRE_AUTH=false
API_KEY=dummy-local-key

# Кэш (очищается при завершении сервера)
CACHE_DIR=.cache_tts
CACHE_MAX_FILES=2000

FFMPEG_BIN=ffmpeg

# Латиница → кириллица для озвучки английских слов (hello → хелло)
TRANSLITERATE_LATIN=true

# Роутинг по языку: RU- и EN-сегменты разными моделями
LANGUAGE_AWARE_ROUTING=true

# Английская модель (при LANGUAGE_AWARE_ROUTING=true)
SILERO_EN_ENABLED=true
SILERO_EN_LANGUAGE=en
SILERO_EN_MODEL_ID=v3_en
SILERO_EN_SAMPLE_RATE=48000
SILERO_EN_DEFAULT_SPEAKER=en_21
